<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/layout_margin"
            android:layout_weight="1">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/centerFloatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:backgroundTint="@color/colorWhite"
                app:fabCustomSize="95dp"
                app:maxImageSize="40dp"
                app:srcCompat="@drawable/ic_enter"
                app:tint="@color/colorAccent2" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/upFloatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="115dp"
                app:backgroundTint="@color/colorWhite"
                app:fabCustomSize="85dp"
                app:maxImageSize="40dp"
                app:srcCompat="@drawable/ic_keyboard_arrow_up"
                app:tint="@color/colorAccent2" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/leftFloatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="115dp"
                app:backgroundTint="@color/colorWhite"
                app:fabCustomSize="85dp"
                app:maxImageSize="40dp"
                app:srcCompat="@drawable/ic_keyboard_arrow_left"
                app:tint="@color/colorAccent2" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/rightFloatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="115dp"
                app:backgroundTint="@color/colorWhite"
                app:fabCustomSize="85dp"
                app:maxImageSize="40dp"
                app:srcCompat="@drawable/ic_keyboard_arrow_right"
                app:tint="@color/colorAccent2" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/downFloatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="115dp"
                app:backgroundTint="@color/colorWhite"
                app:fabCustomSize="85dp"
                app:maxImageSize="40dp"
                app:srcCompat="@drawable/ic_keyboard_arrow_down"
                app:tint="@color/colorAccent2" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                    android:id="@+id/runCommandExtendedFloatingActionButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/layout_margin"
                    android:text="@string/actionRunCommand"
                    android:textColor="@color/colorAccent2"
                    app:backgroundTint="@color/colorWhite"
                    app:icon="@drawable/ic_developer_mode"
                    app:iconTint="@color/colorAccent2" />
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_gravity="start"
                android:layout_marginStart="50dp"
                android:layout_marginTop="@dimen/layout_margin"
                android:layout_marginBottom="@dimen/layout_margin"
                app:cardBackgroundColor="@color/colorWhite"
                app:cardCornerRadius="24dp"
                app:cardElevation="6dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/layout_margin"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="@dimen/layout_margin"
                app:cardBackgroundColor="@color/colorWhite"
                app:cardCornerRadius="24dp"
                app:cardElevation="6dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_gravity="center"
                android:layout_marginStart="73dp"
                android:layout_marginTop="@dimen/layout_margin"
                android:layout_marginEnd="73dp"
                android:layout_marginBottom="@dimen/layout_margin"
                app:cardBackgroundColor="@color/colorWhite"
                app:cardCornerRadius="0dp"
                app:cardElevation="6dp">

                <com.warkiz.widget.IndicatorSeekBar
                    android:id="@+id/volumeIndicatorSeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:thumbTint="@color/colorAccent2"
                    app:isb_indicator_color="@color/colorAccent2"
                    app:isb_indicator_text_color="@color/colorWhite"
                    app:isb_max="100"
                    app:isb_show_indicator="circular_bubble"
                    app:isb_thumb_color="@color/colorAccent2"
                    app:isb_track_progress_color="@color/colorAccent3" />
            </com.google.android.material.card.MaterialCardView>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin"
            android:orientation="horizontal">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/playFloatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                app:backgroundTint="@color/colorWhite"
                app:fabCustomSize="80dp"
                app:maxImageSize="35dp"
                app:srcCompat="@drawable/ic_play"
                app:tint="@color/colorAccent2" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/backFloatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="110dp"
                app:backgroundTint="@color/colorWhite"
                app:fabCustomSize="80dp"
                app:maxImageSize="35dp"
                app:srcCompat="@drawable/ic_back"
                app:tint="@color/colorAccent2" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/powerFloatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="110dp"
                app:backgroundTint="@color/colorWhite"
                app:fabCustomSize="80dp"
                app:maxImageSize="35dp"
                app:srcCompat="@drawable/ic_power"
                app:tint="@color/colorAccent2" />
        </FrameLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
